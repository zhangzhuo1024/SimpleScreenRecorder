<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"

    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/item_iv"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/item_title_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/item_iv"
            android:gravity="center"
            android:singleLine="true"
            android:text="七个小矮人与白雪公主"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_size_tv"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@id/item_title_tv"
            android:layout_toRightOf="@id/item_iv"
            android:gravity="center"
            android:text="1.024GB" />

        <TextView
            android:id="@+id/item_duration_tv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/item_title_tv"
            android:layout_toRightOf="@id/item_size_tv"
            android:gravity="center"
            android:text="02:10:09" />
    </RelativeLayout>
</android.support.v7.widget.CardView>